<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMinor">40%</item>
    </style>

    <style name="CustomDialog2" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMinor">40%</item>
    </style>

    <style name="AuthCodeInput" parent="pretendard_bold_32">
        <item name="android:inputType">number</item>
        <item name="android:maxLength">2</item>
        <item name="android:gravity">center</item>
        <item name="android:textCursorDrawable">@drawable/ic_text_field_cursor_main_color</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/bg_sign_up_auth_code_edit_text</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:saveEnabled">false</item>
    </style>

    <style name="TextField" parent="pretendard_bold_16">
        <item name="android:background">@drawable/bg_text_field</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:textCursorDrawable">@drawable/ic_text_field_cursor_grey_01</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DatePickerStyle" parent="pretendard_regular_16">
        <item name="android:colorControlNormal">@color/main_color</item>
    </style>

    <style name="EditLinkTextField" parent="pretendard_regular_16">
        <item name="android:paddingStart">46dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">@color/grey_01</item>
        <item name="android:background">@drawable/bg_text_field</item>
        <item name="android:textCursorDrawable">@drawable/ic_text_field_cursor_grey_01</item>
        <item name="android:saveEnabled">false</item>
    </style>

    <style name="Theme.EighteenAndroid.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.EighteenAndroid</item>
    </style>
</resources>